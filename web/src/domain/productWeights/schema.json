    "barcode": { "type": "string" },
    "name": { "type": "string" },
    "unit_product_weight_g": { "type": "integer", "minimum": 0 },
    "unit_package_weight_g": { "type": "integer", "minimum": 0 },
    "unit_total_weight_g": { "type": "integer", "minimum": 0 },
    "source": { "type": "string" },
