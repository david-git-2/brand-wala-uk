rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    function signedIn() {
      return request.auth != null;
    }

    function hasEmail() {
      return signedIn() && request.auth.token.email is string;
    }

    function myEmailLower() {
      return hasEmail() ? request.auth.token.email.lower() : "";
    }

    function profileExists() {
      return hasEmail() &&
        exists(/databases/$(database)/documents/users/$(myEmailLower()));
    }

    function profileActive() {
      return profileExists() &&
        get(/databases/$(database)/documents/users/$(myEmailLower())).data.active == 1;
    }

    function profileRoleAdmin() {
      return profileExists() &&
        get(/databases/$(database)/documents/users/$(myEmailLower())).data.role == "admin";
    }

    function profileRole() {
      return profileExists()
        ? get(/databases/$(database)/documents/users/$(myEmailLower())).data.role
        : "";
    }

    function profileCanUseCart() {
      return profileExists() && (
        !("can_use_cart" in get(/databases/$(database)/documents/users/$(myEmailLower())).data) ||
        get(/databases/$(database)/documents/users/$(myEmailLower())).data.can_use_cart == 1
      );
    }

    function isActive() {
      return signedIn() && (
        request.auth.token.active == true ||
        profileActive()
      );
    }

    function isAdmin() {
      return isActive() && (
        request.auth.token.role == "admin" ||
        profileRoleAdmin()
      );
    }

    function isOps() {
      return isActive() && (
        request.auth.token.role == "ops" ||
        profileRole() == "ops"
      );
    }

    function isSales() {
      return isActive() && (
        request.auth.token.role == "sales" ||
        profileRole() == "sales"
      );
    }

    function isInvestor() {
      return isActive() && (
        request.auth.token.role == "investor" ||
        profileRole() == "investor"
      );
    }

    function canReadBackoffice() {
      return isAdmin() || isOps() || isSales() || isInvestor();
    }

    function canWriteOps() {
      return isAdmin() || isOps();
    }

    function canUseCart() {
      return isActive() && (
        request.auth.token.can_use_cart == true ||
        profileCanUseCart()
      );
    }

    function canAccessCart(cartEmail) {
      return canUseCart() && (isAdmin() || myEmailLower() == cartEmail.lower());
    }

    function isOrderOwner(orderId) {
      return exists(/databases/$(database)/documents/orders/$(orderId)) &&
        get(/databases/$(database)/documents/orders/$(orderId)).data.creator_email == myEmailLower();
    }

    function isOrderOwnerAfter(orderId) {
      return existsAfter(/databases/$(database)/documents/orders/$(orderId)) &&
        getAfter(/databases/$(database)/documents/orders/$(orderId)).data.creator_email == myEmailLower();
    }

    match /users/{userEmail} {
      allow get: if signedIn() && (isAdmin() || myEmailLower() == userEmail.lower());
      allow list: if isAdmin();
      allow create, update, delete: if isAdmin();

      match /config/{configId} {
        allow get, list: if signedIn() && (isAdmin() || myEmailLower() == userEmail.lower());
        allow create, update, delete: if isAdmin() || (
          isActive() &&
          myEmailLower() == userEmail.lower()
        );
      }

      match /price_memory/{eventId} {
        allow get, list: if isAdmin() || (isActive() && myEmailLower() == userEmail.lower());
        allow create, update, delete: if isAdmin();
      }
    }

    match /carts/{cartEmail} {
      allow get, list, create, update, delete: if canAccessCart(cartEmail);

      match /items/{itemId} {
        allow get, list, create, update, delete: if canAccessCart(cartEmail);
      }
    }

    match /orders/{orderId} {
      allow get, list: if isAdmin() || (
        isActive() &&
        resource.data.creator_email == myEmailLower()
      );
      allow create: if isAdmin() || (
        isActive() &&
        request.resource.data.creator_email == myEmailLower()
      );
      allow update: if isAdmin();
      allow delete: if isAdmin();

      match /items/{itemId} {
        allow get, list: if isAdmin() || (
          isActive() &&
          isOrderOwner(orderId)
        );
        allow create: if isAdmin() || (
          isActive() &&
          (isOrderOwner(orderId) || isOrderOwnerAfter(orderId))
        );
        allow update: if isAdmin();
        allow delete: if isAdmin();
      }
    }

    match /shipments/{shipmentId} {
      allow read: if canReadBackoffice();
      allow write: if canWriteOps();
    }

    match /shipment_allocations/{allocationId} {
      allow read: if canReadBackoffice();
      allow write: if canWriteOps();
    }

    match /shipment_product_snapshots/{snapshotId} {
      allow read: if canReadBackoffice();
      allow write: if canWriteOps();
    }

    match /product_weights/{weightKey} {
      allow read: if canReadBackoffice();
      allow write: if isAdmin();
    }

    match /product_weight_logs/{logId} {
      allow read, write: if isAdmin();
    }

    match /order_items/{orderItemId} {
      allow read: if canReadBackoffice();
      allow write: if canWriteOps();
    }

    match /shipment_items/{shipmentItemId} {
      allow read: if canReadBackoffice();
      allow write: if canWriteOps();
    }

    match /shipment_accounting/{shipmentId} {
      allow read: if isAdmin();
      allow write: if isAdmin();

      match /customer_payments/{paymentId} {
        allow read: if isAdmin();
        allow write: if isAdmin();
      }
    }

    match /investors/{investorId} {
      allow read: if isAdmin();
      allow write: if isAdmin();
    }

    match /investor_transactions/{txnId} {
      allow read: if isAdmin();
      allow write: if isAdmin();
    }

    match /status_overrides/{overrideId} {
      allow read, write: if isAdmin();
    }

    match /{document=**} {
      allow read, write: if false;
    }
  }
}
